                <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="resetButton" minWidth="-Infinity" mnemonicParsing="false" text="Reset" />
                <Button fx:id="saveButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#onSave" styleClass="primaryButton" text="Save" GridPane.columnIndex="1" />
                <Button fx:id="cancelButton" minWidth="-Infinity" mnemonicParsing="false" text="Cancel" GridPane.columnIndex="2" />
            </children>
        </GridPane>
      <Label text="Sub type" GridPane.rowIndex="6" />
      <ComboBox fx:id="subTypeInput" layoutX="120.0" layoutY="167.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
